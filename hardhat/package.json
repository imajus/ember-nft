{
  "name": "ember-nft-contracts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "chain": "hardhat node",
    "compile": "hardhat compile",
    "deploy:test": "hardhat ignition deploy ignition/modules/NFTCollectionFactory.js",
    "deploy:local": "hardhat ignition deploy ignition/modules/NFTCollectionFactory.js --network localhost",
    "deploy:prod": "hardhat ignition deploy ignition/modules/NFTCollectionFactory.js --network somnia",
    "verify:prod": "npx hardhat verify blockscout --network somnia --contract contracts/SmartContract.sol:SmartContract $(jq -r '.\"NFTCollectionFactoryModule#NFTCollectionFactory\"' ./ignition/deployments/chain-50312/deployed_addresses.json)"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-keystore": "^3.0.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@solidstate/hardhat-abi-exporter": "^3.0.0",
    "dotenv": "^17.2.1",
    "hardhat": "^3.0.1"
  }
}
